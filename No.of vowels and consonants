b=input("enter the word")
vowels=0
consonant=0
for i in range(0,len(b)):
    if b[i]=='a' or b[i]=='A' or b[i]=='E' or b[i]=='e' or b[i]=='i' or b[i]=='I' or b[i]=='o' or b[i]=='O' or b[i]=='u' or b[i]=='U':
        vowels=vowels+1
    else:
        consonant=consonant+1
print("no of vowels in the give word is ",vowels)
print("no of consonants in the given word is ",consonant)
